{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "/admin-api/**",
                "function": "adminApi"
            },
            {
                "source": "/home**",
                "destination": "/home.html"
            },
            {
                "source": "/reduce-payments**",
                "destination": "/reduce-payments.html"
            },
            {
                "source": "/single-track.html**",
                "destination": "/home.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "source": "functions"
    }
}